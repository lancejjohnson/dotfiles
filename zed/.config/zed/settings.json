// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "agent_ui_font_size": 18,
  "base_keymap": "VSCode",
  "buffer_font_family": "MonoLisa Variable",
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    // ss02: script when true
    "ss02": false,
    // ss04: unstyled g when true
    "ss04": false,
    // ss15: no serif i when true
    "ss15": true,
    // ss16: no serif r when true
    "ss16": true
  },
  "buffer_font_size": 15,
  "buffer_font_weight": 400,
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "git_gutter": "hide"
  },
  "languages": {
    "Elixir": {
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "format_on_save": "on",
      "language_servers": ["!expert", "lexical", "!elixir-ls", "!next-ls"]
    },
    "HEEX": {
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "format_on_save": "on",
      "language_servers": ["!expert", "lexical", "!elixir-ls", "!next-ls"]
    },
    "JavaScript": {
      // "format_on_save": {
      //   "external": {
      //     "command": "prettier",
      //     "arguments": ["--stdin-filepath", "{buffer_path}"]
      //   }
      // },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"],
      "formatter": "language_server"
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard"
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  "relative_line_numbers": "enabled",
  "show_copilot_suggestions": true,
  "soft_wrap": "none",
  "tab_size": 2,
  "tab_bar": {
    // Whether or not to show the tab bar in the editor
    "show": true,
    // Whether or not to show the navigation history buttons.
    "show_nav_history_buttons": true
  },
  // "theme": "Github Light",
  "theme": "Gruvbox Light Hard",
  "ui_font_size": 16,
  "vim_mode": true,
  "current_line_highlight": "gutter",
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right"
}
